<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.LifeLongLearning" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="error">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/red</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">center</item>
        <item name="stRadius">20dp</item>
    </style>

    <style name="warning">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/yellow</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">center</item>
        <item name="stRadius">20dp</item>
    </style>
</resources>